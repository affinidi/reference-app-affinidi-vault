{
  "name": "affinidi-login",
  "version": "1.0.0",
  "description": "This is a ready-to-use reference app that showcases integration with the Affinidi Vault.",
  "main": "index.js",
  "scripts": {
    "dev": "node generator/confirm.mjs && nodemon --exec 'node generator/generate.mjs && npm run start'",
    "generate": "node generator/confirm.mjs && node generator/generate.mjs",

    "install-all": "concurrently -n w: npm:install:*",
    "install:template": "npm i --prefix generator/template",
    "install:default": "npm i --prefix use-cases/default",

    "start": "concurrently -n w: \"npm:start:*(!template)\"",
    "start:template": "npm run --prefix generator/template dev -- -p 3000",
    "start:default": "npm run --prefix use-cases/default dev -- -p 3001",

    "build": "concurrently -n w: \"npm:build:*(!template)\"",
    "build:template": "npm run --prefix generator/template build",
    "build:default": "npm run --prefix use-cases/default build",

    "postinstall": "npm run install-all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/affinidi/reference-app-affinidi-vault.git"
  },
  "author": "Affinidi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/affinidi/reference-app-affinidi-vault/issues"
  },
  "homepage": "https://github.com/affinidi/reference-app-affinidi-vault#readme",
  "devDependencies": {
    "@types/node": "^18.13.0",
    "concurrently": "^7.6.0",
    "inquirer": "^9.1.4",
    "mkdirp": "^2.1.3",
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.2"
  },
  "nodemonConfig": {
    "watch": [
      "README.md",
      "generator",
      "docs",
      "guides"
    ],
    "ignore": [
      ".git",
      "node_modules",
      "package.json",
      ".next"
    ],
    "delay": 500,
    "ext": "js,mjs,ts,tsx,json,css,scss,.env,md"
  }
}
